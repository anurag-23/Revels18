<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="98dp"
    android:id="@+id/home_categories_item"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_half"
    android:layout_marginBottom="@dimen/padding_half"
    android:paddingTop="@dimen/padding_half"
    android:paddingBottom="@dimen/padding_half"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:layout_below="@+id/home_category_frame"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/home_category_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Event Name"
            android:textColor="@color/black"
            android:textSize="@dimen/typography_body"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="2"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/home_category_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:background="@drawable/background_circle"
            android:id="@+id/home_category_logo_image_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/ic_launcher"/>
    </FrameLayout>
</RelativeLayout>