<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/splash_root_layout"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"

>

<include
    android:id="@+id/splash_no_connection_layout"
    layout="@layout/layout_no_connection"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_half"
    android:layout_marginLeft="@dimen/padding_half"
    android:layout_marginRight="@dimen/padding_half"
    android:layout_marginTop="@dimen/padding_half"
    android:visibility="gone"
    android:layout_centerInParent="true"/>

<FrameLayout
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:paddingLeft="@dimen/padding_2x"
    android:paddingRight="@dimen/padding_2x">

    <ImageView
        android:id="@+id/splash_left_revels_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/revels_icon_left" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/splash_right_revels_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/revels_icon_right" />


    <ImageView
        android:visibility="gone"
        android:id="@+id/splash_revels_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/revels_icon_text" />

</FrameLayout>
</RelativeLayout>
