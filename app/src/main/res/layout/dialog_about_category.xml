<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_half"
    android:paddingStart="@dimen/padding_half"
    android:paddingRight="9dp"
    android:paddingEnd="9dp"
    android:paddingTop="@dimen/padding_half"
    android:paddingBottom="@dimen/padding_default">

    <LinearLayout
        android:id="@+id/event_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingLeft="11dp"
        android:paddingStart="11dp"
        android:paddingEnd="@dimen/padding_half"
        android:paddingRight="@dimen/padding_half"
        android:paddingTop="@dimen/padding_half"
        android:paddingBottom="@dimen/padding_half">

        <TextView
            android:id="@+id/category_about_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:paddingRight="16dp"
            android:paddingEnd="16dp"
            android:text="Category Name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/typography_title"
            tools:text="Category Name" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/padding_half"
        android:layout_marginBottom="@dimen/padding_half"
        android:background="@android:drawable/divider_horizontal_bright"/>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_half"
            android:layout_marginRight="@dimen/padding_half">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/category_about_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_toRightOf="@+id/imageView2"
                android:text="TextView" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/padding_half"
                android:layout_marginEnd="@dimen/padding_half"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_description" />

        </RelativeLayout>
        </ScrollView>
</LinearLayout>