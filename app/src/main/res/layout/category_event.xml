<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="98dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground">

    <FrameLayout
        android:id="@+id/fav_event_logo_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="6dp">

        <ImageView
            android:id="@+id/cat_event_logo_image_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/background_circle"
            android:src="@mipmap/ic_launcher" />

    </FrameLayout>

    <TextView
        android:id="@+id/cat_event_round_text_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end|right|bottom"
        android:background="@drawable/circular_bg_primary_dark"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:visibility="visible"
        tools:text="R"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="@dimen/padding_half"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/fav_event_logo_frame"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/cat_event_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            tools:text="Event Name"
            android:textSize="@dimen/typography_body"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/cat_event_time_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Event Time"
            android:gravity="center"
            android:textSize="12sp"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>

</RelativeLayout>
