<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/padding_half"
    android:layout_marginLeft="@dimen/padding_half"
    android:layout_marginRight="@dimen/padding_half"
    android:layout_marginBottom="@dimen/padding_half">
<LinearLayout
    android:id="@+id/rc_item_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/padding_half">

    <LinearLayout
        android:id="@+id/rc_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rc_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_half"
                android:maxLines="2"
                tools:text="Event Name"
                android:textSize="@dimen/typography_subheading"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/colorPrimary"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/padding_half"
                android:background="@android:drawable/divider_horizontal_bright"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="bottom"
            android:layout_marginBottom="@dimen/padding_half"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/padding_quarter"
                android:layout_marginRight="@dimen/padding_quarter">
                <TextView
                    android:id="@+id/rc_team_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Team 17 "
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="@dimen/typography_subheading"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/typography_body"
                android:text="@string/vs"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="end|right"
                android:layout_marginLeft="@dimen/padding_quarter"
                android:layout_marginStart="@dimen/padding_quarter"
                >
                <TextView
                    android:id="@+id/rc_team_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Team 5 "
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="@dimen/typography_subheading"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_event_venue"
                android:layout_marginEnd="@dimen/padding_quarter"
                android:layout_marginRight="@dimen/padding_quarter"
                android:fontFamily="sans-serif-medium"
                android:textSize="@dimen/typography_body"
                />

            <TextView
                android:id="@+id/rc_venue_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="NLH 404"
                android:textSize="@dimen/typography_body"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/rc_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/padding_quarter"
                android:layout_marginEnd="@dimen/padding_quarter"
                tools:text="2018-02-10"
                android:textSize="@dimen/typography_body" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/interpunct"
                android:textSize="@dimen/typography_title"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/padding_quarter"
                android:layout_marginEnd="@dimen/padding_quarter"/>
            <TextView
                android:id="@+id/rc_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="2:00PM - 5:00PM"
                android:textSize="@dimen/typography_body" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>