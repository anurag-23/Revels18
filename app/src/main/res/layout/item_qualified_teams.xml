<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left|center"
    android:orientation="horizontal"
    android:padding="@dimen/padding_half">

    <TextView
        android:id="@+id/qualified_team_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_quarter"
        android:layout_marginRight="@dimen/padding_quarter"
        android:text="@string/team_position"
        android:textColor="@color/white"
        android:textSize="@dimen/typography_body"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_quarter"
        android:layout_marginRight="@dimen/padding_quarter"
        android:text="Team ID :"
        android:textColor="@color/black"
        android:textSize="@dimen/typography_body" />
    <TextView
        android:id="@+id/qualified_teams_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/typography_body"
        tools:text="Team ID" />

</LinearLayout>